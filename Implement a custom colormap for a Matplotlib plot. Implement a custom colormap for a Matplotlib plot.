import numpy as np
import matplotlib.pyplot as plt
from matplotlib.colors import LinearSegmentedColormap

# 1. Create a custom colormap (Blue → White → Red)
colors = ["#0000FF", "#FFFFFF", "#FF0000"]  # Blue to White to Red
custom_cmap = LinearSegmentedColormap.from_list("blue_white_red", colors, N=256)

# 2. Generate sample data
x = np.linspace(-3, 3, 300)
y = np.linspace(-3, 3, 300)
X, Y = np.meshgrid(x, y)
Z = np.sin(np.sqrt(X**2 + Y**2))

# 3. Plot using the custom colormap
plt.figure(figsize=(6, 5))
plt.imshow(Z, cmap=custom_cmap, origin='lower', extent=[-3, 3, -3, 3])
plt.colorbar(label="Value")
plt.title("Custom Colormap Example", fontsize=14)
plt.show()
